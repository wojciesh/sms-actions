{
    "manifest_version": 3,
    "name": "sms-actions",
    "version": "1.0",
    "description": "Chrome Extension to monitor messages on messages.google.com/web and take actions on conditions",
    "permissions": [
      "activeTab"
    ],
    "content_scripts": [
      {
        "matches": ["https://messages.google.com/web/*"],
        "run_at": "document_end",
        "js": ["content.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["actions_conditions.json"],
        "matches": ["<all_urls>"]
      }
    ]
}